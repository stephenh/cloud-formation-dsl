{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2016",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "strict": true,
    "importHelpers": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/"
  ]
}
